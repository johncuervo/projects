<div class="bg-sky-200 min-h-full">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">Orders</h2>
    <br>
    <div class="relative overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Order Number
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Number of Items
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Total Price
                    </th>
                    <th scope="col" class="px-6 py-3">
                        
                    </th>
                </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                  <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= order.order_number %></td>
                  <td class="px-6 py-4"><%= order.order_items.count %></td>
                  <td class="px-6 py-4"><%= number_to_currency(order.total_price) %></td>
                  <td class="px-6 py-4">
                    <%= link_to "Show", v1_order_path(order), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
                    <%= link_to "Destroy", v1_order_path(order), 
                            data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                            }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
    <div class="mt-4 flex justify-between">
      <%= link_to "Home Page", v1_items_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  </div>
</div>

